<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <EditText android:id="@+id/threads_edit" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:ems="10" android:hint="@string/threads_edit"
        android:inputType="number">

        <requestFocus />
    </EditText>

    <EditText android:id="@+id/iterations_edit" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:ems="10" android:hint="@string/iterations_edit"
        android:inputType="number" />

    <Button android:id="@+id/start_button" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="@string/start_button" />

    <ScrollView android:id="@+id/scrollView1" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/log_view" android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>